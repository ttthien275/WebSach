@model WebBanSach.Models.NHAXUATBAN

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Xóa nhà cung cấp</h2>

<h3>Bạn có chắc chắn xóa nhà cung cấp này không?</h3>
<div>
    <h4>Thông tin nhà cung cấp</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Thương hiệu
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenNXB)
        </dd>

        <dt>
            Địa chỉ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Diachi)
        </dd>

        <dt>
            Điện thoại
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DienThoai)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-primary" />
            <a href="@Url.Action("Index","QlNhaCC")" class="btn btn-success">Quay lại</a>
        </div>
    }
</div>
