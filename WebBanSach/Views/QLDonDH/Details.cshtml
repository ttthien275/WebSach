@model IEnumerable<WebBanSach.Models.CHITIETDATHANG>

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@*<h2>Chi tiết đơn đặt sách</h2>*@

@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
<div class="card-header">
    <div class="row">
        <div class="col-md-6">
            <strong class="text-danger text-uppercase">TẤT CẢ ĐƠN HÀNG</strong>
        </div>
        <div class="col-md-6 text-right">
            <a href="@Url.Action("QLDonDH","QLDonDH")" class="btn btn-success">Quay lại</a>
        </div>
    </div>
</div>
<table class="table">
    <tr>
        <th>
            Số đơn hàng
        </th>
        <th>
            Mã sách
        </th>
        <th>
            Số lượng
        </th>
        <th>
            Đơn giá
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SoDH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaSach)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonGia)
            </td>
        </tr>
    }

</table>
@section header{

    <link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" />
}
@section footer{
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    <script>
        jQuery(document).ready(function () {
            jQuery('#myTable').DataTable();
        });
    </script>
}
